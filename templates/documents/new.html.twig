{% extends 'base.html.twig' %}

{% block title %}Ajouter un document ou une photo{% endblock %}

{% block body %}
    <main class="article p-3">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h1>Photos ou PDF - page du 
                        {{ trans_day_hash[article.jour|date('l')] }}
                        {{ article.jour ? article.jour|date('j') : '' }}
                        {{ trans_month_hash[article.jour|date('F')] }}
                        {{ article.jour ? article.jour|date('Y') : '' }}</h1>
                <p class="text-presentation">Choisissez un ou plusieurs documents (maintenir appuyé sur CTRL pour sélectionner plusieurs fichiers)</p>

                    {{ include('documents/_form.html.twig') }}

                <p>Formats acceptés :<br>
                - images : jpg, jpeg, png<br>
                - documents : PDF</p>
            </div>
        </div>
    </main>
{% endblock %}
