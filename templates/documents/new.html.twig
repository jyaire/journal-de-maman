{% extends 'base.html.twig' %}

{% block title %}Ajouter une photo{% endblock %}

{% block body %}
    <main class="article p-3">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h1>Photos pour le 
                        {{ trans_day_hash[article.jour|date('l')] }}
                        {{ article.jour ? article.jour|date('j') : '' }}
                        {{ trans_month_hash[article.jour|date('F')] }}
                        {{ article.jour ? article.jour|date('Y') : '' }}</h1>
                <p class="text-presentation">
                    Choisissez une ou plusieurs photos 
                    (maintenir appuyé sur CTRL pour sélectionner plusieurs fichiers)<br>
                </p>

                    {{ include('documents/_form.html.twig') }}

                <p>
                Formats acceptés : jpg, jpeg, png (<10Mo)<br>
            </div>
        </div>
    </main>
{% endblock %}
