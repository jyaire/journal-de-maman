<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/css?family=Caveat|Permanent+Marker&display=swap" rel="stylesheet">
        <title>{% block title %}Le journal de Maman{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {% block header %}
        <header>
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <a href="{{ path('index') }}" class="navbar-brand">Le Journal de Maman</a>
                <img src="{{ asset('images/fleur-de-lys.png') }}" title="Fleur de Lys" style="height: 30px;">

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav">
                        <a href="{{ path('journaux_index') }}" class="pl-5 nav-item nav-link active">Journaux</a>
                        <a href="{{ path('articles_show_random') }}" class="pl-5 nav-item nav-link active">Une journ√©e au hasard</a>
                    </div>
                    <div class="navbar-nav ml-auto">
                        {% if app.user %}
                            <a href="{{ path('articles_new') }}" class="pr-5 nav-item nav-link active">Ajouter du contenu</a>
                            <a href="{{ path('user_show', {id: app.user.id}) }}" class="pr-5 nav-item nav-link active">Bienvenue {{ app.user.firstname }}</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="nav-item nav-link active">Se connecter</a>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
