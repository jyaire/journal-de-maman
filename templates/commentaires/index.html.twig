{% extends 'base.html.twig' %}

{% block title %}Commentaires index{% endblock %}

{% block body %}
    <h1>Commentaires index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datecom</th>
                <th>Com</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.datecom ? commentaire.datecom|date('Y-m-d H:i:s T') : '' }}</td>
                <td>{{ commentaire.com }}</td>
                <td>
                    <a href="{{ path('commentaires_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('commentaires_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commentaires_new') }}">Create new</a>
{% endblock %}
