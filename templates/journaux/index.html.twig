{% extends 'base.html.twig' %}

{% block title %}Journaux index{% endblock %}

{% block body %}
    <h1>Journaux index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for journaux in journauxes %}
            <tr>
                <td>{{ journaux.id }}</td>
                <td>{{ journaux.titre }}</td>
                <td>{{ journaux.datedebut ? journaux.datedebut|date('Y-m-d') : '' }}</td>
                <td>{{ journaux.datefin ? journaux.datefin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('journaux_show', {'id': journaux.id}) }}">show</a>
                    <a href="{{ path('journaux_edit', {'id': journaux.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('journaux_new') }}">Create new</a>
{% endblock %}
