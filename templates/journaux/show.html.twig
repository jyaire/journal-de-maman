{% extends 'base.html.twig' %}

{% block title %}{{ journaux.titre }}{% endblock %}

{% block body %}
    <main class="journal">
        <h1 class="p-3">{{ journaux.titre }}</h1>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p class="text-presentation">
                        Ce journal commence le {{ journaux.datedebut ? journaux.datedebut|date('d-m-Y') : '' }}
                        et se termine le {{ journaux.datefin ? journaux.datefin|date('d-m-Y') : '' }}
                    </p>
                </div>
            </div>
            <a href="{{ path('articles_show', {id: 1}) }}" class="ephemeride">
                <div class="card-deck" style="width: 150px;">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title text-center">LUNDI</div>
                            <div class="jour-rouge">{{ journaux.datedebut ? journaux.datedebut|date('d') : '' }}</div>
                            <div class="card-title text-center">JANVIER</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </main>

    <a href="{{ path('journaux_index') }}">back to list</a>

    <a href="{{ path('journaux_edit', {'id': journaux.id}) }}">edit</a>

    {{ include('journaux/_delete_form.html.twig') }}
{% endblock %}
